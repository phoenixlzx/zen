<%-include header%>

<div class="page" style="width: 900px; margin-top: 40px; margin-bottom: 40px; padding-left: 20px; padding-right: 20px; background-color: #CBCCCC;">
    <div class="page-header" style="border-bottom: 1px #2D89EF solid; padding-bottom: 20px;">
        <div class="page-header-content">
            <h1><%= __('EDIT') %>: <%= post.title %></h1>
        </div>
    </div>
    <div class="page-region">
        <div class="page-region-content">
            <div>
                <form name="post" method="post" onchange="window.onbeforeunload = confirmExit();">
                    <br />
                    <div class="input-control text span4">
                        <input type="text" name="title" value="<%= post.title %>"  />
                    </div>
                    <div class="span3">
                        <div class="input-control text span3">
                            <input type="text" name="tag" value="<%= tags %>" />
                        </div>
                    </div>
                    <p><%= __('MARKDOWN_SUPPORT') %>
                        (<a href="http://daringfireball.net/projects/markdown/syntax" target="_blank"><%= __('MARKDOWN_HELP') %></a>) </p>
                    <div class="input-control textarea">
                        <textarea name="post" style="display: none;"><%- post.content %></textarea>
                        <div id="epiceditor" style="min-height: 350px; margin-bottom: 10px;"></div>
                    </div>
                    <br />
                    <input type="submit" value="<%= __('SAVE') %>" onclick="window.onbeforeunload = null;" />
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function confirmExit(){
        return "<%= __('CONFIRM_LEAVE') %>";
    }
</script>
<%-include footer%>