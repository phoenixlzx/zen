<%-include header%>

<div class="row" style="margin-top: 20px;">
    <ul class="breadcrumbs">
        <li><a href="/"><%= __('HOMEPAGE') %></a></li>
        <li class="current"><a href="/post/<%= post._id %>/edit"><%= __('EDIT') %>: <%= post.title %></a></li>
    </ul>
</div>
<div>
    <div>
        <form name="post" method="post" onchange="window.onbeforeunload = confirmExit();">
            <div class="row">
                <div class="large-12 columns">
                    <label for="title"><%= __('POST_TITLE') %></label>
                    <input type="text" name="title" value="<%= post.title %>"  />
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <label for="tag"><%= __('POST_TAGS') %></label>
                    <input type="text" name="tag" class='input' value="<%= tags %>" />
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <label for="post"><%= __('MARKDOWN_SUPPORT') %> (<a href="https://help.github.com/articles/github-flavored-markdown" target="_blank"><%= __('MARKDOWN_HELP') %></a>)</label>
                    <textarea id="post" name="post" style="display: none;"><%- post.content %></textarea>
                    <div id="epiceditor" style="min-height: 350px; margin-bottom: 10px;"></div>
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <input type="submit" class="small button" value="<%= __('SAVE') %>" onclick="window.onbeforeunload = null;" />
                </div>
            </div>
        </form>
    </div>
</div>
