<%-include header%>
<div class="pure-u" id="menu">
    <div class="pure-menu pure-menu-open">
        <a class="pure-menu-heading" href="/"><%= siteName %></a>

        <ul>

            <li>
                <a href="/archive"><%= __('ARCHIVE') %></a>
            </li>

            <li>
                <a href="/tags"><%= __('TAGS') %></a>
            </li>

            <li>
                <a href="/rss">RSS</a>
            </li>

            <% if(!user) { %>
            <li class="menu-item-divided"><a href="/login"><%= __('LOGIN') %></a></li>
            <% if(allowReg) { %>
            <li><a href="/reg"><%= __('REGISTER') %></a></li>
            <% }} else { %>
            <li class="menu-item-divided">
                <br /><%= __('WELCOME') %>,<br />
                <a href="/me"><%= user.name %></a></li>
            <li class="pure-menu-selected"><a href="/post-new"><%= __('POST_NEW') %></a></li>
            <li><a href="/u/<%= user.name %>"><%= __('MY_POSTS') %></a></li>
            <li><a href="/logout"><%= __('LOGOUT') %></a></li>
            <% } %>

        </ul>
    </div>
</div>

<% if (locals.success) { %>
<div class="yui3-alert yui3-alert-success" style="letter-spacing: 0;">
    <%= success %>
</div>
<% } %>
<% if (locals.error) { %>
<div class="yui3-alert yui3-alert-error" style="letter-spacing: 0;">
    <%= error %>
</div>
<% } %>

<div class="pure-u-1" id="main">

    <div class="header" style="margin: 10px 60px 0px 0px;">
        <h1><%= __('POST_NEW') %></h1>
    </div>

    <div class="marketing-ribbon">
        <div class="size-chart l-vbox pure-g">
            <div class="size-chart-item size-chart-grids pure-u" style="width: 16.6666%;">
                &nbsp;&nbsp;<br />&nbsp;<br />&nbsp;
            </div>
            <div class="size-chart-item size-chart-base pure-u" style="width: 16.6666%;">
                &nbsp;&nbsp;<br />&nbsp;<br />&nbsp;
            </div>

            <div class="size-chart-item size-chart-forms pure-u" style="width: 16.6666%;">
                &nbsp;&nbsp;<br />&nbsp;<br />&nbsp;
            </div>
            <div class="size-chart-item size-chart-menus pure-u" style="width: 16.6666%;">
                &nbsp;&nbsp;<br />&nbsp;<br />&nbsp;
            </div>
            <div class="size-chart-item size-chart-tables pure-u" style="width: 16.6666%;">
                &nbsp;&nbsp;<br />&nbsp;<br />&nbsp;
            </div>
            <div class="size-chart-item size-chart-buttons pure-u" style="width: 16.6666%;">
                &nbsp;&nbsp;<br />&nbsp;<br />&nbsp;
            </div>
        </div>
    </div>

    <div class="content">
        <form name="post" method="post" onchange="window.onbeforeunload = confirmExit();" class="pure-form pure-form-stacked">
            <div class="pure-control-group">
                <label for="title"><%= __('POST_TITLE') %></label>
                <input type="text" name="title" id="title" class="pure-input-1-2" placeholder="<%= __('POST_TITLE') %>" />
            </div>
            <div class="pure-control-group">
                <label for="tag"><%= __('TAGS') %></label>
                <input type="text" name="tag" id="tag" class="pure-input-1-2" placeholder="<%= __('POST_TAGS') %>" />
            </div>
            <div class="pure-control-group">
                <label for="post"><%= __('MARKDOWN_SUPPORT') %> (<a href="http://daringfireball.net/projects/markdown/syntax" target="_blank"><%= __('MARKDOWN_HELP') %></a>)</label>
                <div id="epiceditor" style="min-height: 350px; margin-bottom: 10px;"></div>
            </div>
            <div class="pure-controls">
                <input type="submit" class="pure-button pure-button-primary" value="<%= __('POST') %>" onclick="window.onbeforeunload = null;" />
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    function confirmExit(){
        return "<%= __('CONFIRM_LEAVE') %>";
    }
</script>

<%-include footer%>