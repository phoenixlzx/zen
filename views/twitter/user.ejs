<%-include header%>
<div class="navbar navbar-inverse navbar-fixed-top" style="filter:alpha(opacity=75);-moz-opacity:0.75;opacity:0.75;width:100%;display:block;">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="/"><%= siteName %></a>
            <div class="nav-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/archive">Archive</a></li>
                    <li><a href="/tags">Tags</a></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <% if(!user) { %>
                    <li><a href="/login">Login</a></li>
                    <% if(allowReg) { %>
                    <li><a href="/reg">Register</a></li>
                    <% }} else { %>
                    <li><p class="navbar-text">Welcome back,
                        <a class="navbar-link" href="/u/<%= user.name %>"><%= user.name %></a>. </p></li>
                    <li><a class="navbar-link" href="/post-new">Post new</a></li>
                    <li><a class="navbar-link" href="/me">My posts</a></li>
                    <li><a class="navbar-link" href="/logout">Log out</a></li>
                    <% } %>
                    <li><a class="navbar-link" href="/rss"><strong>RSS</strong></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <% if (locals.success) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <% } %>
    <% if (locals.error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>
    <div>
        <ul class="breadcrumb">
            <li><a href="/">Home</a> <span class="divider">/</span></li>
            <li class="active">User: <%= user.name %></li>
        </ul>
    </div>
    <div>
    <fieldset>
        <div>
            <% posts.forEach(function(post, index){ %>
            <p><h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2></p>
            <p>
                Author: <a href="/u/<%= post.name %>"><%= post.name %></a> |
                Date: <%= post.time.minute %>
            </p>
            <p><%- post.post %></p>
            <p>Views: <%= post.views %></p>
            <% }) %>
        </div>
    </fieldset>
    </div>
    <%-include pagination%>
</div>
<%-include footer%>