<%-include header%>
<div class="navbar navbar-inverse navbar-fixed-top" style="filter:alpha(opacity=75);-moz-opacity:0.75;opacity:0.75;width:100%;display:block;">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="/"><%= siteName %></a>
            <div class="nav-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/archive"><%= __('ARCHIVE') %></a></li>
                    <li><a href="/tags"><%= __('TAGS') %></a></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <% if(!user) { %>
                    <li><a href="/login"><%= __('LOGIN') %></a></li>
                    <% if(allowReg) { %>
                    <li><a href="/reg"><%= __('REGISTER') %></a></li>
                    <% }} else { %>
                    <li><p class="navbar-text"><%= __('WELCOME') %>,
                        <a class="navbar-link" href="/u/<%= user.name %>"><%= user.name %></a>. </p></li>
                    <li><a class="navbar-link" href="/post-new"><%= __('POST_NEW') %></a></li>
                    <li><a class="navbar-link" href="/me"><%= __('MY_POSTS') %></a></li>
                    <li><a class="navbar-link" href="/logout"><%= __('LOGOUT') %></a></li>
                    <% } %>
                    <li><a class="navbar-link" href="/rss"><strong>RSS</strong></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <% if (locals.success) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <% } %>
    <% if (locals.error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>
    <div>
        <ul class="breadcrumb">
            <li><a href="/"><%= __('HOME') %></a> <span class="divider">/</span></li>
            <li class="active"><%= __('ARCHIVE') %></li>
        </ul>
    </div>
    <div>
    <fieldset>
        <ul class="unstyled">
            <% var lastYear=0 %>
            <% posts.forEach(function(post, index){ %>
            <% if(lastYear!=post.time.year){ %>
            <li><h3><%= post.time.year %></h3></li>
            <% lastYear=post.time.year } %>
            <li><time><%= post.time.day %></time> <a href="/post/<%= post._id %>"><%= post.title %></a></li>
            <% }) %>
        </ul>
    </fieldset>
    </div>
</div>
<%-include footer%>