<%-include header%>
<div class="navbar navbar-inverse navbar-fixed-top" style="filter:alpha(opacity=75);-moz-opacity:0.75;opacity:0.75;width:100%;display:block;">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="/"><%= siteName %></a>
            <div class="nav-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/archive"><%= __('ARCHIVE') %></a></li>
                    <li><a href="/tags"><%= __('TAGS') %></a></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li><p class="navbar-text"><%= __('WELCOME') %>,
                        <a class="navbar-link" href="/me"><%= user.name %></a>. </p></li>
                    <li class="active"><a class="navbar-link" href="/post-new"><%= __('POST_NEW') %></a></li>
                    <li><a class="navbar-link" href="/me"><%= __('MY_POSTS') %></a></li>
                    <li><a class="navbar-link" href="/logout"><%= __('LOGOUT') %></a></li>
                    <li><a class="navbar-link" href="/rss"><strong>RSS</strong></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <% if (locals.success) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <% } %>
    <% if (locals.error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>
    <div>
        <ul class="breadcrumb">
            <li><a href="/"><%= __('HOMEPAGE') %></a> <span class="divider">/</span></li>
            <li class="active"><%= __('POST_NEW') %></li>
        </ul>
    </div>
<div>
    <fieldset>
        <div>
            <form name="post" method="post" onchange="window.onbeforeunload = confirmExit;">
                <br />
                <input type="text" name="title" class="input-xlarge" placeholder="<%= __('POST_TITLE') %>"  />
                <br />
                <input type="text" name="tag" class='input-xlarge' placeholder="<%= __('POST_TAGS') %>" />
                <br />
                <p><%= __('MARKDOWN_SUPPORT') %>
                    (<a href="http://daringfireball.net/projects/markdown/syntax" target="_blank"><%= __('MARKDOWN_HELP') %></a>) </p>
                <textarea name="post" style="display: none;"></textarea>
                <div id="epiceditor" style="min-height: 350px; margin-bottom: 10px;"></div>
                <br />
                <input type="submit" class="btn btn-primary" value="<%= __('POST') %>" onclick="window.onbeforeunload = null;" />
            </form>
        </div>
    </fieldset>
</div>
</div>
<script type="text/javascript">
    function confirmExit(){
        return "<%= __('CONFIRM_LEAVE') %>";
    }
</script>
<%-include footer%>