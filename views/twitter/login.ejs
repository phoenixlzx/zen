<%-include header%>
<div class="navbar navbar-inverse navbar-fixed-top" style="filter:alpha(opacity=75);-moz-opacity:0.75;opacity:0.75;width:100%;display:block;">
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="/"><%= siteName %></a>
            <div class="nav-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/archive"><%= __('ARCHIVE') %></a></li>
                    <li><a href="/tags"><%= __('TAGS') %></a></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li class="active"><a class="navbar-link" href="/login"><%= __('LOGIN') %></a></li>
                    <% if(allowReg) { %>
                    <li><a href="/reg"><%= __('REGISTER') %></a></li>
                    <% } %>
                    <li><a class="navbar-link" href="/rss"><strong>RSS</strong></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <% if (locals.success) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <% } %>
    <% if (locals.error) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>
    <div>
        <ul class="breadcrumb">
            <li><a href="/"><%= __('HOMEPAGE') %></a> <span class="divider">/</span></li>
            <li class="active"><%= __('LOGIN') %></li>
        </ul>
    </div>
    <div>
        <form method="post">
            <fieldset>
                <div class="control-group">
                    <label class="control-label" for="username"><%= __('USERNAME') %></label>
                    <div class="controls">
                        <input type="text" class="input-xlarge" id="username" name="username">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="password"><%= __('PASSWORD') %></label>
                    <div class="controls">
                        <input type="password" class="input-xlarge" id="password" name="password">
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary"><%= __('LOGIN') %></button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<%-include footer%>